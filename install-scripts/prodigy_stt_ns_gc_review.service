[Unit]
Description=Prodigy for stt
After=syslog.target network.target

[Service]
Type=simple

SyslogIdentifier=prodigy_stt
Environment="PRODIGY_HOME=/usr/local/prodigy"
Environment="PRODIGY_LOGGING=verbose"
Environment="PRODIGY_CONFIG=/usr/local/prodigy/prodigy-tools/configuration/stt_ns_gc_review.json"
WorkingDirectory=/usr/local/prodigy
#ExecStart=/usr/bin/python3.9 -m prodigy audio.transcribe stt_ns_gc_review dataset:stt_ns_gc --fetch-media
ExecStart=/usr/bin/python3.9 -m prodigy audio.transcribe stt_ns_gc_review /home/spsither/staging/stt_ns_gc_filtered.jsonl --loader jsonl --fetch-media

User=prodigy
Group=prodigy

UMask=0007
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target
